@model IP_KPI.Models.Survey

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}

<h1>Edit </h1>

<h4>Survey</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SurveysEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RecordNumber" />
            <div class="form-group">
                <label asp-for="Term" class="control-label"></label>
                <select asp-for="Term" class="form-control">
                    <option value="الفصل الدراسي الاول">الفصل الدراسي الاول</option>
                    <option value="الفصل الدراسي الثاني">الفصل الدراسي الثاني</option>
                    <option value="الفصل الدراسي الثالث">الفصل الدراسي الثالث</option>
                    <option value="الفصل الدراسي الصيفي">الفصل الدراسي الصيفي</option>
                </select>
                <span asp-validation-for="Term" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfStudent" class="control-label"></label>
                <input asp-for="NumberOfStudent" class="form-control" />
                <span asp-validation-for="NumberOfStudent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExtraActivity" class="control-label"></label>
                <select asp-for="ExtraActivity" class="form-control">
                    <option value="مشترك">مشترك</option>
                    <option value="غير مشترك">غير مشترك</option>
                </select>
                <span asp-validation-for="ExtraActivity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentCase" class="control-label"></label>
                <select asp-for="StudentCase" class="form-control">
                    <option value="طبيعي">طبيعي</option>
                    <option value="احتياجات خاصة">احتياجات خاصة</option>
                </select>
                <span asp-validation-for="StudentCase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nationality" class="control-label"></label>
                <select asp-for="Nationality" class="form-control">
                    <option value="سعودي">سعودي</option>
                    <option value="غير سعودي">غير سعودي</option>
                </select>
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="انثى">انثى</option>
                    <option value="ذكر">ذكر</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumOfRespondent" class="control-label"></label>
                <input asp-for="NumOfRespondent" class="form-control" />
                <span asp-validation-for="NumOfRespondent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumOfExcellentScore" class="control-label"></label>
                <input asp-for="NumOfExcellentScore" class="form-control" />
                <span asp-validation-for="NumOfExcellentScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumOfGoodScore" class="control-label"></label>
                <input asp-for="NumOfGoodScore" class="form-control" />
                <span asp-validation-for="NumOfGoodScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumOfNeutralScore" class="control-label"></label>
                <input asp-for="NumOfNeutralScore" class="form-control" />
                <span asp-validation-for="NumOfNeutralScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumOfWeakScore" class="control-label"></label>
                <input asp-for="NumOfWeakScore" class="form-control" />
                <span asp-validation-for="NumOfWeakScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KpiId" class="control-label"></label>
                <select asp-for="KpiId" class="form-control" asp-items="ViewBag.KpiId"></select>
                <span asp-validation-for="KpiId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProgramId" class="control-label"></label>
                <select asp-for="ProgramId" class="form-control" asp-items="ViewBag.ProgramId"></select>
                <span asp-validation-for="ProgramId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-sm btn-outline-secondary w-25" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SurveysIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
