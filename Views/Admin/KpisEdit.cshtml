@model IP_KPI.Models.Kpi

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}

<h1>Edit</h1>

<h4>Kpi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="KpisEdit">
