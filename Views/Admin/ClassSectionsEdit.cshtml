@model IP_KPI.Models.ClassSection

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}

<h1>Edit</h1>

<h4>ClassSection</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ClassSectionsEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="انثى">انثى</option>
                    <option value="ذكر">ذكر</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Term" class="control-label"></label>
                <select asp-for="Term" class="form-control">
                    <option value="الفصل الدراسي الاول">الفصل الدراسي الاول</option>
                    <option value="الفصل الدراسي الثاني">الفصل الدراسي الثاني</option>
                    <option value="الفصل الدراسي الثالث">الفصل الدراسي الثالث</option>
                    <option value="الفصل الدراسي الصيفي">الفصل الدراسي الصيفي</option>
                </select>
                <span asp-validation-for="Term" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumOfClasses" class="control-label"></label>
                <input asp-for="NumOfClasses" class="form-control" />
                <span asp-validation-for="NumOfClasses" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="SectionId" />
            <div class="form-group">
                <label asp-for="ProgramId" class="control-label"></label>
                <select asp-for="ProgramId" class="form-control" asp-items="ViewBag.ProgramId"></select>
                <span asp-validation-for="ProgramId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-sm btn-outline-secondary w-25" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ClassSectionsIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
