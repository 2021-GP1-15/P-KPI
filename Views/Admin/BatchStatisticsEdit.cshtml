@model IP_KPI.Models.BatchStatistic

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}

<h1>Edit</h1>

<h4>BatchStatistic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BatchStatisticsEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="انثى">انثى</option>
                    <option value="ذكر">ذكر</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumOfBatchStudent" class="control-label"></label>
                <input asp-for="NumOfBatchStudent" class="form-control" />
                <span asp-validation-for="NumOfBatchStudent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumMinYearStudent" class="control-label"></label>
                <input asp-for="NumMinYearStudent" class="form-control" />
                <span asp-validation-for="NumMinYearStudent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumFirstYearStudent" class="control-label"></label>
                <input asp-for="NumFirstYearStudent" class="form-control" />
                <span asp-validation-for="NumFirstYearStudent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumStudentContinue" class="control-label"></label>
                <input asp-for="NumStudentContinue" class="form-control" />
                <span asp-validation-for="NumStudentContinue" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="BatchId" />
            <div class="form-group">
                <label asp-for="ProgramId" class="control-label"></label>
                <select asp-for="ProgramId" class="form-control" asp-items="ViewBag.ProgramId"></select>
                <span asp-validation-for="ProgramId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-sm btn-outline-secondary w-25" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BatchStatisticsIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
